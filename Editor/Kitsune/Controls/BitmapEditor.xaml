<UserControl x:Class="Kitsune.Controls.BitmapEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kitsune.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MouseDown="Grid_MouseDown" MouseMove="Grid_MouseMove" MouseWheel="Grid_MouseWheel">
        <Image x:Name="BitmapData" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Image x:Name="BitmapGrid" RenderOptions.BitmapScalingMode="HighQuality"/>
    </Grid>
</UserControl>