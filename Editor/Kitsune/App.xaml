<Application x:Class="Kitsune.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Kitsune"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="MainBackColor" Color="#FFF0F0F0"/>
        <SolidColorBrush x:Key="TabSelectedColor" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TabUnselectedColor" Color="#FFF0F0F0"/>
        <SolidColorBrush x:Key="TabBorderColor" Color="#FFACACAC"/>
    </Application.Resources>
</Application>
